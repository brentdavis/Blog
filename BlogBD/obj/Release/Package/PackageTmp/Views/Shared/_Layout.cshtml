<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Brent's Blog</title>
    @*@Styles.Render("~/Content/css")*@
    @Scripts.Render("~/bundles/modernizr")
    <!-- Bootstrap core CSS -->
    @Styles.Render("~/vendor/bootstrap/css/bootstrap.css")
    <!-- Custom styles for this template -->
    @Styles.Render("~/css/blog-home.css")
    <!--paginator styles-->
    @Styles.Render("~/Content/PagedList.css")
    
    @using Microsoft.AspNet.Identity

        <!--Favicon!-->
        <link runat="server" href="~/favicon.ico" rel="shortcut icon" type="image/ico" />
        <link runat="server" rel="shortcut icon" href="~/favicon.ico" type="image/x-icon" />

</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
        <div class="container">
            <a class="navbar-brand" href="#">Brent's Blog</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="#">
                            Home
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","BlogPosts")">
                            Blog
                        </a>
                    </li>
                    <li class="nav-item">
                            @*<a class="nav-link" @Html.ActionLink("Login", "Login", "Account", new { @class = "elements" }, null)></a>*@
                            <a class="nav-link" href="@Url.Action("Contact","Home")">
                                Contact
                            </a>
                        </li>
                    @Html.Partial("_LoginPartial")
                </ul>

            </div>

        </div>

    </nav>
    <div class="container body-content">
        @RenderBody()
    </div>
    <!-- Footer -->
    <footer class="py-3 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; Brent Davis 2018</p>
        </div>
        <!-- /.container -->
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/vendor/jquery/jquery.min.js")
    @Scripts.Render("~/vendor/bootstrap/js/bootstrap.bundle.min.js")
    @RenderSection("scripts", required: false)

</body>
</html>
